{
  "name": "@file-services/directory",
  "description": "A file system wrapper that adds directory scoping to any `IFileSystem` implementation.",
  "version": "2.0.0",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "build": "ts-build ./src --cjs --esm",
    "test": "run-p test:node test:browser",
    "test:node": "mocha -r @ts-tools/node/r \"test/**/*.{spec,ix}.ts?(x)\" --watch-extensions ts,tsx --colors",
    "test:browser": "mocha-pup \"test/**/*.spec.ts?(x)\"",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@file-services/posix-path": "^1.0.3",
    "@file-services/types": "^2.0.0",
    "@file-services/utils": "^2.0.0"
  },
  "files": [
    "cjs",
    "esm",
    "src",
    "!src/tsconfig.json"
  ],
  "license": "MIT",
  "repository": "https://github.com/wixplosives/file-services/tree/master/packages/directory",
  "homepage": "https://github.com/wixplosives/file-services",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
