{
  "name": "@file-services/utils",
  "description": "Common file system utility functions.",
  "version": "0.2.1",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
