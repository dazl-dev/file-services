  "dependencies": {
    "@file-services/types": "^0.2.1"
  },
  "devDependencies": {
    "@file-services/test-kit": "^0.2.1"
  },
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "license": "MIT",
