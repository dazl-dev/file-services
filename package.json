{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "prebuild": "yarn clean",
    "build": "lerna run build --stream",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "lerna run test --stream --concurrency=1",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"./**/*.{md,js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@ts-tools/build": "^1.2.6",
    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "10",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "@types/webpack": "^4.41.13",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "lerna": "^3.21.0",
    "mocha": "^7.1.2",
    "mocha-pup": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "promise-assist": "^1.3.0",
    "puppeteer": "^3.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.9.2",
    "webpack": "^4.43.0"
  },
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "private": true
}
