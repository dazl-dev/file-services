{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "watch": "yarn build -w",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "14",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/sass": "^1.16.0",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "html-webpack-plugin": "^5.1.0",
    "lerna": "^4.0.0",
    "mocha": "^8.3.0",
    "mocha-play": "^1.0.1",
    "playwright-chromium": "^1.8.1",
    "promise-assist": "^1.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.7",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "source-map-loader": "^2.0.1",
    "type-fest": "^0.21.1",
    "typescript": "~4.1.5",
    "util": "^0.12.3",
    "webpack": "^5.22.0"
  },
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "private": true
}
