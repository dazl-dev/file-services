{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "node ./scripts/build.mjs && tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/test/*.{spec,nodespec}.ts?(x)\" --parallel",
    "test:browser": "mocha-play \"packages/*/test/**/*.spec.ts?(x)\""
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.38.1",
    "@ts-tools/node": "^5.0.2",
    "@ts-tools/webpack-loader": "^5.0.2",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "16",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.10",
    "@types/sinon": "^10.0.18",
    "@types/sinon-chai": "^3.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^2.4.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "mocha-play": "^6.0.0",
    "postcss": "^8.4.31",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.0",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^4.0.1",
    "type-fest": "^4.3.3",
    "typescript": "~5.2.2",
    "webpack": "^5.88.2"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
