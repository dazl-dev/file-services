{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "watch": "yarn build -w",
    "lint": "eslint .",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "16",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/rimraf": "^3.0.2",
    "@types/sass": "^1.16.1",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^4.0.0",
    "mocha": "^9.1.3",
    "mocha-play": "^3.0.0",
    "playwright-chromium": "^1.16.2",
    "promise-assist": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^3.0.0",
    "type-fest": "^2.5.2",
    "typescript": "~4.4.4",
    "util": "^0.12.4",
    "webpack": "^5.60.0"
  },
  "license": "MIT",
  "private": true
}
