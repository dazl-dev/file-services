{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "prebuild": "yarn clean",
    "build": "lerna run build --stream",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "lerna run test --stream --concurrency=1",
    "prettify": "prettier \"packages/**/*.ts\" --write",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ts-tools/build": "^1.2.0",
    "@ts-tools/node": "^1.1.1",
    "@ts-tools/webpack-loader": "^1.1.0",
    "@types/chai": "^4.2.4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "10",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/rimraf": "^2.0.3",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.3",
    "@types/webpack": "^4.39.5",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "lerna": "^3.18.3",
    "mocha": "^6.2.2",
    "mocha-pup": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "promise-assist": "^1.2.6",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.6.4",
    "webpack": "^4.41.2"
  },
  "license": "MIT",
  "private": true
}
