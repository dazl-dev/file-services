{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "node ./scripts/build.mjs && tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/test/*.{spec,nodespec}.ts?(x)\" --parallel",
    "test:browser": "mocha-web \"packages/*/test/**/*.spec.ts?(x)\"",
    "prettify": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.51.1",
    "@ts-tools/node": "^6.1.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^3.2.12",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "create-temp-directory": "^2.4.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^11.1.0",
    "mocha-web": "^2.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "promise-assist": "^2.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.86.0",
    "sinon": "^20.0.0",
    "sinon-chai": "^3.7.0",
    "type-fest": "^4.38.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
