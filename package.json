    "eslint-plugin-no-only-tests": "^2.4.0",
    "lerna": "^3.22.1",
    "mocha": "^8.1.3",
    "mocha-pup": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "promise-assist": "^1.3.0",
    "puppeteer": "^5.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "type-fest": "^0.16.0",
    "typescript": "~4.0.2",
