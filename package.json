{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "watch": "yarn build -w",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/rimraf": "^3.0.0",
    "@types/sass": "^1.16.0",
    "@types/sinon": "^9.0.11",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-only-tests": "^2.5.0",
    "html-webpack-plugin": "^5.3.1",
    "lerna": "^4.0.0",
    "mocha": "^8.3.2",
    "mocha-play": "^1.0.1",
    "playwright-chromium": "^1.10.0",
    "promise-assist": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.6.0",
    "source-map-loader": "^2.0.1",
    "type-fest": "^1.0.1",
    "typescript": "~4.2.4",
    "util": "^0.12.3",
    "webpack": "^5.32.0"
  },
  "license": "MIT",
  "private": true
}
