{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "16",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^2.4.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "mocha-play": "^6.0.0",
    "playwright-chromium": "^1.36.2",
    "postcss": "^8.4.27",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "sass": "^1.64.2",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^4.0.1",
    "type-fest": "^4.1.0",
    "typescript": "~5.1.6",
    "webpack": "^5.88.2"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
