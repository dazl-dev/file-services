{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "node ./scripts/build.mjs && tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/test/*.{spec,nodespec}.ts?(x)\" --parallel",
    "test:browser": "mocha-play \"packages/*/test/**/*.spec.ts?(x)\"",
    "prettify": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.42.1",
    "@ts-tools/node": "^5.0.2",
    "@ts-tools/webpack-loader": "^5.0.2",
    "@types/chai": "^4.3.12",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "18",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^2.4.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.3.0",
    "mocha-play": "^7.0.4",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "sass": "^1.71.1",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^5.0.0",
    "type-fest": "^4.10.3",
    "typescript": "~5.3.3",
    "webpack": "^5.90.3"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
