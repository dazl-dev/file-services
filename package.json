{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "16",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/rimraf": "^3.0.2",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^10.0.0",
    "mocha-play": "^3.1.0",
    "playwright-chromium": "^1.23.0",
    "postcss": "^8.4.14",
    "process": "^0.11.10",
    "promise-assist": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^4.0.0",
    "type-fest": "^2.14.0",
    "typescript": "~4.7.4",
    "util": "^0.12.4",
    "webpack": "^5.73.0"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
