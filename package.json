{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "watch": "yarn build -w",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --enable-source-maps --parallel",
    "test:browser": "mocha-pup \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/sass": "^1.16.0",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@types/webpack": "^4.41.25",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "html-webpack-plugin": "^4.5.0",
    "lerna": "^3.22.1",
    "mocha": "^8.2.1",
    "mocha-pup": "^5.1.1",
    "promise-assist": "^1.3.0",
    "puppeteer": "^5.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "source-map-loader": "^1.1.2",
    "type-fest": "^0.19.0",
    "typescript": "~4.1.2",
    "webpack": "^4.44.2"
  },
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "private": true
}
