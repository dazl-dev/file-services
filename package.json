{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "prebuild": "yarn clean",
    "build": "lerna run build --stream",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "lerna run test --stream --concurrency=1",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"packages/**/*.ts\" --write"
  },
  "devDependencies": {
    "@ts-tools/build": "^1.2.4",
    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.2",
    "@types/chai": "^4.2.8",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.1",
    "@types/node": "10",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/rimraf": "^2.0.3",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@types/webpack": "^4.41.3",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "lerna": "^3.20.2",
    "mocha": "^7.0.1",
    "mocha-pup": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "promise-assist": "^1.3.0",
    "puppeteer": "^2.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.1",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.4.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.7.5",
    "webpack": "^4.41.5"
  },
