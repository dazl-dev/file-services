{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "node ./scripts/build.mjs && tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/test/*.{spec,nodespec}.ts?(x)\" --parallel",
    "test:browser": "mocha-web \"packages/*/test/**/*.spec.ts?(x)\"",
    "prettify": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.48.0",
    "@ts-tools/node": "^6.0.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.9",
    "@types/node": "18",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "create-temp-directory": "^2.4.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^10.7.3",
    "mocha-web": "^1.0.2",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "promise-assist": "^2.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.8",
    "sass": "^1.79.5",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "type-fest": "^4.26.1",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
