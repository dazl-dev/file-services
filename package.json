{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "tsc --build",
    "watch": "npm run build -- -w",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "16",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^2.4.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^10.2.0",
    "mocha-play": "^5.0.0",
    "playwright-chromium": "^1.32.1",
    "postcss": "^8.4.21",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.4.1",
    "sass": "^1.60.0",
    "sinon": "^15.0.3",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^4.0.1",
    "type-fest": "^3.7.2",
    "typescript": "~5.0.2",
    "webpack": "^5.77.0"
  },
  "engines": {
    "npm": ">=8"
  },
  "license": "MIT",
  "private": true
}
