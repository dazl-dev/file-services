{
  "name": "file-services",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "watch": "yarn build -w",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "mocha \"./packages/*/dist/test/*.{spec,nodespec}.js\" --parallel",
    "test:browser": "mocha-play \"packages/*/dist/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.3",
    "@types/node": "14",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/rimraf": "^3.0.1",
    "@types/sass": "^1.16.1",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "create-temp-directory": "^1.1.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "html-webpack-plugin": "^5.3.2",
    "lerna": "^4.0.0",
    "mocha": "^9.0.2",
    "mocha-play": "^2.0.3",
    "playwright-chromium": "^1.13.0",
    "promise-assist": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.35.2",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^3.0.0",
    "type-fest": "^1.2.2",
    "typescript": "~4.3.5",
    "util": "^0.12.4",
    "webpack": "^5.45.1"
  },
  "license": "MIT",
  "private": true
}
